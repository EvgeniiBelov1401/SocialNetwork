@model SocialNetwork.Views.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

<h2>Войти в аккаунт</h2>
<form method="post" asp-controller="Login" asp-action="Login">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="EmailReg"></label><br />
        <input asp-for="EmailReg" />
        <span asp-validation-for="EmailReg"></span>
    </div>
    <div>
        <label asp-for="PasswordReg"></label><br />
        <input asp-for="PasswordReg" />
        <span asp-validation-for="PasswordReg"></span>
    </div>
    <div>
        <label asp-for="RememberMe"></label><br />
        <input type="checkbox" name="RememberMe" value="false" />
    </div>

    <div>
        <input type="submit" value="Войти" />
    </div>
</form>